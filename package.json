{
  "name": "nodejs-back-template",
  "version": "1.0.0",
  "description": "This is a template for Node.js backend projects with typescript.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "format": "pnpm exec biome format --write",
    "lint": "pnpm exec biome lint",
    "check": "pnpm exec biome check",
    "check:fix": "pnpm exec biome check --write",
    "test": "vitest",
    "test:run": "vitest --run",
    "coverage": "vitest --coverage",
    "doc": "typedoc --out docs ./src --entryPointStrategy expand",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./src/schemas/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=./src/schemas/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/schemas/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./src/schemas/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=./src/schemas/prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=./src/schemas/prisma/schema.prisma",
    "prisma:format": "prisma format --schema=./src/schemas/prisma/schema.prisma",
    "prisma:validate": "prisma validate --schema=./src/schemas/prisma/schema.prisma",
    "test:db": "tsx scripts/test-db-connection.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "backend",
    "template",
    "nodemon",
    "vitest",
    "biome"
  ],
  "author": "Luk3",
  "license": "ISC",
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "@types/node": "24.3.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-istanbul": "3.2.4",
    "awilix": "^12.0.5",
    "nodemon": "3.1.10",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "tsx": "4.20.5",
    "typedoc": "0.28.12",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "vitest-mock-extended": "3.1.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "dotenv": "17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "winston": "^3.17.0",
    "zod": "^4.1.12"
  }
}
